{%- endif -%}

{%- if social_media_count > 0 -%}
  <ul class="list-group list-group-horizontal d-flex justify-content-center border-top border-secondary rounded-0 {% if spacing %}{{ spacing }}{% endif %}">
    {{ social_media }}
